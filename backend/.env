# BusNotify Environment Configuration

# Application
APP_NAME=Bus Delay Prediction System
APP_VERSION=1.0.0
DEBUG=true

# Security
SECRET_KEY=your-super-secret-key-change-in-production-123456789
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=bus_notification_system

# Redis Configuration (for caching and real-time updates)
REDIS_URL=redis://localhost:6379

# WebSocket Configuration
WEBSOCKET_UPDATE_INTERVAL=10
WEBSOCKET_HIGH_FREQUENCY_INTERVAL=5
WEBSOCKET_LOW_BANDWIDTH_INTERVAL=30

# Simulation Settings
SIMULATION_STEP_INTERVAL=1
DEFAULT_BUS_SPEED=30.0
DELAY_THRESHOLD_MINUTES=5

# Notifications (Optional - can be configured later)
FCM_SERVER_KEY=
FCM_CREDENTIALS_PATH=
SENDGRID_API_KEY=
FROM_EMAIL=noreply@busnotify.com
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# External APIs (Optional)
WEATHER_API_KEY=
TRAFFIC_API_KEY=

# Machine Learning
MODEL_UPDATE_INTERVAL_HOURS=24
PREDICTION_CONFIDENCE_THRESHOLD=0.7

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s